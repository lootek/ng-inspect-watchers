{
  "manifest_version": 2,

  "name": "Ng Inspect Watchers",
  "description": "Inspect the Angular watchers of an app",
  "version": "0.4",

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["ng_inspect_watchers.css"],
    "js": ["status_manager.js"],
    "run_at": "document_start"
  }],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Ng Inspect Watchers"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ]
}
