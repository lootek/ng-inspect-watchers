{
  "manifest_version": 2,

  "name": "AngularJS Inspect Watchers",
  "description": "Inspect the scope watchers of an Angular app",
  "version": "0.7.1",

  "icons": {
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["ng_inspect_watchers.css"],
    "js": ["tab_communicator.js"],
    "run_at": "document_start"
  }],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Ng Inspect Watchers"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ]
}
