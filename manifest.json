{
  "manifest_version": 2,

  "name": "Ng Inspect Watchers",
  "description": "A Chrome extension to inspect the Angular watchers of an app",
  "version": "0.1",

  "background":{
    "scripts":["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["ng_inspect_watchers.css"],
    "run_at": "document_start"
  }],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Ng Inspect Watchers"
  },
  "permissions": [
    "activeTab",
    "<all_urls>"
  ]
}
